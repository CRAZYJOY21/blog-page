  <div class="container">
    <div class="col-lg-12 single-content">
      {{#if post.imageName}}
      <p class="mb-5">
        <img src="{{post.imageName}}" alt="Image" class="img-fluid">
      </p>  
      {{/if}}
      <h1 class="mb-4">
        {{post.title}}
      </h1>
      <div class="post-meta d-flex mb-5">
        <div class="vcard">
          <span class="date-read">{{post.publishDate}} <span class="mx-1">â€¢</span></span>
        </div>
      </div>

      <p>
        {{post.content}}
      </p>
  </div>
</div>
